{
    "name": "cpsit/typo3-upgrade-analyser",
    "description": "Standalone TYPO3 Upgrade Analysis Tool - Analyzes TYPO3 installations for upgrade readiness",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "Dirk Wenzel"
        }
    ],
    "require": {
        "php": "^8.1",
        "composer/semver": "^3.4",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.5",
        "nikic/php-parser": "^4.18 || ^5.0",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/console": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/dotenv": "^6.4",
        "symfony/filesystem": "^6.4 || ^7.0",
        "symfony/finder": "^6.4 || ^7.0",
        "symfony/http-client": "^6.4 || ^7.0",
        "symfony/yaml": "^6.4 || ^7.0",
        "twig/twig": "^3.8"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.47",
        "friendsofphp/php-cs-fixer": "^3.45",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "^6.4 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "CPSIT\\UpgradeAnalyzer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CPSIT\\UpgradeAnalyzer\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/typo3-analyzer"
    ],
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "platform": {
            "php": "8.3"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "scripts": {
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "static-analysis": "phpstan analyse --memory-limit=2G",
        "test": "phpunit --exclude-group=integration,real-world,github-api,ter-api,performance",
        "test:all-integration": "phpunit --testsuite=Integration --group=integration,real-world,github-api,ter-api --no-coverage",
        "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html var/coverage --coverage-clover var/coverage/clover.xml --coverage-text --testsuite Unit,Integration,Functional",
        "test:functional": "phpunit --testsuite=Functional",
        "test:github-api": "phpunit --group=github-api --no-coverage --stop-on-failure",
        "test:integration": "phpunit --testsuite=Integration --no-coverage",
        "test:performance": "phpunit --group=performance --no-coverage",
        "test:real-world": "phpunit --group=real-world --no-coverage --stop-on-failure",
        "test:ter-api": "phpunit --group=ter-api --no-coverage --stop-on-failure",
        "test:unit": "phpunit --testsuite=Unit"
    }
}

{
    "name": "test/typo3-v12-custom-both-dirs",
    "description": "Test TYPO3 v12 installation with custom vendor-dir and web-dir (matches DENA structure)",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^8.1",
        "typo3/cms-backend": "^12.4",
        "typo3/cms-core": "^12.4",
        "typo3/cms-extbase": "^12.4",
        "typo3/cms-extensionmanager": "^12.4",
        "typo3/cms-frontend": "^12.4",
        "typo3/cms-install": "^12.4",
        "typo3/cms-recordlist": "^12.4",
        "cpsit/bravo-handlebars-content": "^1.3",
        "cpsit/cps-shortnr": "^3.2",
        "apache-solr-for-typo3/solr": "^12.0",
        "apache-solr-for-typo3/tika": "^12.0",
        "georgringer/news": "^11.0"
    },
    "config": {
        "vendor-dir": "app/vendor",
        "bin-dir": "app/vendor/bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        }
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": "app/web"
        }
    },
    "autoload": {
        "psr-4": {
            "Test\\TestInstallation\\": "src/"
        }
    }
}

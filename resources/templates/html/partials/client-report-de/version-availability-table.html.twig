                <h3>Version Availability Analysis</h3>
                <p>This analyzer checks if extensions are available in TYPO3 Extension Repository (TER), Packagist, and Git repositories for the target TYPO3 version.</p>

                <table>
                    <thead>
                        <tr>
                            <th>Extension</th>
                            <th>Current Version</th>
                            <th>TER</th>
                            <th>Packagist</th>
                            <th>Git</th>
                            <th>Risk Level</th>
                            <th>Latest Version</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in extension_data %}
                        <tr>
                            <td><strong>{{ data.extension.key }}</strong></td>
                            <td>{{ data.extension.version ? data.extension.version.toString() : 'N/A' }}</td>
                            {% if data.version_analysis %}
                            <td><span class="{{ data.version_analysis.ter_available ? 'status-available' : 'status-unavailable' }}">{{ data.version_analysis.ter_available ? '✅' : '❌' }}</span></td>
                            <td><span class="{{ data.version_analysis.packagist_available ? 'status-available' : 'status-unavailable' }}">{{ data.version_analysis.packagist_available ? '✅' : '❌' }}</span></td>
                            <td><span class="{{ data.version_analysis.git_available ? 'status-available' : 'status-unavailable' }}">{{ data.version_analysis.git_available ? '✅' : '❌' }}</span></td>
                            <td><span class="badge badge-{{ data.version_analysis.risk_level }}">{{ data.version_analysis.risk_level|upper }}</span></td>
                            <td>{{ data.version_analysis.git_latest_version ?: 'N/A' }}</td>
                            {% else %}
                            <td><span class="status-unknown">❓</span></td>
                            <td><span class="status-unknown">❓</span></td>
                            <td><span class="status-unknown">❓</span></td>
                            <td><span class="badge badge-unknown">UNKNOWN</span></td>
                            <td>N/A</td>
                            {% endif %}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
